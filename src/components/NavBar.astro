---
interface Props {
    link: string;
}

const { link } = Astro.props;
---

<nav
  class="bg-transparent lg:w-[120px] fixed 
         flex flex-row lg:flex-col items-center justify-center 
         gap-16 py-10
         left-4           /* stick to the left */
         lg:top-1/2       /* center vertically on large screens */
         lg:-translate-y-1/2"
>
  <a href="/" class="relative inline-block group hover:cursor-pointer">
    <div class="absolute lg:hidden inset-0 flex items-center justify-center">
      <div class="w-2 h-2 bg-slate-700 rounded-full opacity-0 transition-all duration-500 ease-out group-hover:w-10 group-hover:h-10 group-hover:opacity-100"></div>
    </div>

    <div class="relative z-10 flex items-center justify-center w-10 h-10">
      <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-home-2" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke={`${link== "/" ? "#FACC15" : "#FFFFFF"}`} fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M5 12l-2 0l9 -9l9 9l-2 0" />
        <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7" />
        <path d="M10 12h4v4h-4z" />
      </svg>
    </div>
  </a>

  <a href="/proyects" class="relative inline-block group hover:cursor-pointer">
    <div class="absolute lg:hidden inset-0 flex items-center justify-center">
      <div class="w-2 h-2 bg-slate-700 rounded-full opacity-0 transition-all duration-500 ease-out group-hover:w-10 group-hover:h-10 group-hover:opacity-100"></div>
    </div>

    <div class="relative z-10 flex items-center justify-center w-10 h-10">
      <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-pencil" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke={`${link== "proyects" ? "#FACC15" : "#FFFFFF"}`} fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4" />
        <path d="M13.5 6.5l4 4" />
      </svg>
    </div>
  </a>

  <a href="/about" class="relative inline-block group hover:cursor-pointer">
    <div class="absolute lg:hidden inset-0 flex items-center justify-center">
      <div class="w-2 h-2 bg-slate-700 rounded-full opacity-0 transition-all duration-500 ease-out group-hover:w-10 group-hover:h-10 group-hover:opacity-100"></div>
    </div>

    <div class="relative z-10 flex items-center justify-center w-10 h-10">
      <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke={`${link== "about" ? "#FACC15" : "#FFFFFF"}`} fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
        <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
      </svg>
    </div>
  </a>

  <a href="/contact" class="relative lg:hidden inline-block group hover:cursor-pointer">
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="w-2 h-2 bg-slate-700 rounded-full opacity-0 transition-all duration-500 ease-out group-hover:w-10 group-hover:h-10 group-hover:opacity-100"></div>
    </div>

    <div class="relative z-10 flex items-center justify-center w-10 h-10">
      <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-telegram" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M15 10l-4 4l6 6l4 -16l-18 7l4 2l2 6l3 -4" />
      </svg>
    </div>
  </a>
</nav>
